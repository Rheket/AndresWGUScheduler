<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".EditAssessmentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:showDividers="middle"
        android:divider="@drawable/divider8dp">

        <EditText
            android:id="@+id/edit_assessment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Assessment Title"
            android:inputType="text"/>

        <RadioGroup
            android:id="@+id/radio_group_assessment_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/rb_objective_assessment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Objective Assessment" />

            <RadioButton
                android:id="@+id/rb_performance_assessment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Performance Assessment"/>

        </RadioGroup>

        <DatePicker
            android:id="@+id/date_picker_due_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>



</ScrollView>