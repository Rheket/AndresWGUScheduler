<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:showDividers="middle"
    android:divider="@drawable/divider8dp"
    tools:context=".ViewAssessmentActivity">


    <TextView
        android:id="@+id/text_view_assessment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Assessment Title"
        android:inputType="text"/>

    <TextView
        android:id="@+id/text_view_assessment_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Assessment Type"
        android:inputType="text"/>

    <TextView
        android:id="@+id/text_view_assessment_due_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Due Date"
        android:inputType="text"/>


</LinearLayout>